@model NutriHub.Models.Nutriente

@{
    ViewBag.Title = "Agregar nutriente";
}

<h2>Agregar nutriente @ViewBag.id</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group col-md-12">
            <div class="col-md-2">
                <h4>Nutriente</h4>
            </div>
        </div>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.nombre, "Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-7">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="form-group col-md-7">
    <div class="col-md-offset-2 col-md-10">
        @Html.ActionLink("Volver a la lista", "Index", new { id = ViewBag.id })
    </div>
</div>
