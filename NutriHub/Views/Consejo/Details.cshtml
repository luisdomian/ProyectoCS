@model NutriHub.Models.Consejo

@{
    ViewBag.Title = "Details";
}

<div class="container body-content">
    <h2>Detalles</h2>
    <div>
        <h4>Consejo</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.LabelFor(model => model.tituloConsejo, "Titulo:", htmlAttributes: new { @class = "control-label col-md-2" })
            </dt>

            <dd>
                <div class="col-md-10">
                    <div class="label">
                        @Html.DisplayFor(model => model.tituloConsejo)
                    </div>
                </div>
            </dd>

            <dt>
                @Html.LabelFor(model => model.mensajeConsejo, "Mensaje:", htmlAttributes: new { @class = "control-label col-md-2" })
            </dt>

            <dd>
                <div class="col-md-10">
                    <div class="label">
                        @Html.DisplayFor(model => model.mensajeConsejo)
                    </div>
                </div>
            </dd>

            <dt>
                @Html.LabelFor(model => model.referencia, "Referencia:", htmlAttributes: new { @class = "control-label col-md-2" })
            </dt>

            <dd>
                <div class="col-md-10">
                    <div class="label">
                        @Html.DisplayFor(model => model.referencia)
                    </div>
                </div>
            </dd>

        </dl>
    </div>
    <p>

        @Html.ActionLink("Editar", "Edit", new { id = Model.idConsejo }) |
        @Html.ActionLink("Volver a la lista", "Index")
    </p>
</div>