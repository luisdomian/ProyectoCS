@model NutriHub.Models.ListaCompras

@{
    ViewBag.Title = "Eliminar elementos";
    Layout = "~/Views/Shared/_LayoutPa.cshtml";
}

<h2>Eliminar elementos</h2>

<h3>¿Desea eliminar este elemento de la lista de compras?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.nombre, "Nombre:", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            <div class="col-md-10">
                <div class="label">
                    @Html.DisplayFor(model => model.nombre)
                </div>
            </div>
        </dd>

        <dt>
            @Html.LabelFor(model => model.Alimento.nombre, "Nombre del alimento:", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            <div class="col-md-10">
                <div class="label">
                    @Html.DisplayFor(model => model.Alimento.nombre)
                </div>
            </div>
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-primary" /> |
            @Html.ActionLink("Volver a la lista", "Index")
        </div>
    }
</div>
