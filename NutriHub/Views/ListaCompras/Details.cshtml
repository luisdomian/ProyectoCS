@model NutriHub.Models.ListaCompras

@{
    ViewBag.Title = "Detalles de la lista de compras";
    Layout = "~/Views/Shared/_LayoutPa.cshtml";
}

<h2>Detalles de la lista de compras</h2>

<div>
    <h4>Lista de Compras</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.nombre, "Nombre:", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            <div class="col-md-10">
                <div class="label">
                    @Html.DisplayFor(model => model.nombre)
                </div>
            </div>
        </dd>

        <dt>
            @Html.LabelFor(model => model.Alimento.nombre, "Nombre del alimento:", htmlAttributes: new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            <div class="col-md-10">
                <div class="label">
                    @Html.DisplayFor(model => model.Alimento.nombre)
                </div>
            </div>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.idLista }) |
    @Html.ActionLink("Volver a la lista", "Index")
</p>
