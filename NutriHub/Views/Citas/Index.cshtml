@model IEnumerable<NutriHub.Models.Cita>

@{
    ViewBag.Title = "Citas";
}

<div class="view-container">
    <h2>Citas</h2>

    <p>
        @Html.ActionLink("Agregar nueva cita", "Create", new { id = ViewBag.id})
    </p>
    <table class="table table-striped table-bordered" id="example">
        <thead>
            <tr>

                <th>
                    Fecha
                </th>
                <th>
                    Hora
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Estado
                </th>
                <th>
                    Ocupación
                </th>
                <th>
                    Opciones
                </th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.fecha.ToString("dd/MMMM/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.hora)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Paciente.Usuario.nombreUsuario)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Paciente.ocupacion)
                    </td>
                    <td>

                        <a href="@Url.Action("Edit", "Citas", new { id = item.idCita })" class="btn-index">Editar<i class=" icon ion-md-create"></i></a>
                        <a href="@Url.Action("Details", "Citas", new { id = item.idCita })" class="btn-index">Detalles  <i class=" ion-md-add"></i></a>
                        <a href="@Url.Action("Delete", "Citas", new { id = item.idCita })" class="btn-index">Eliminar<i class=" icon ion-md-trash"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


