@model NutriHub.Models.Alimento

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar alimento</h2>

<h3>¿Desea eliminar el alimento?</h3>
<div>
    <h4>Alimento</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nutriente
        </dt>

        <dd>
            <div class="col-md-10">
                <div class="label">
                    @Html.DisplayFor(model => model.nombre)
                </div>
            </div>
        </dd>

        <dt>
            Nombre del nutriente
        </dt>

        <dd>
            <div class="col-md-10">
                <div class="label">
                    @Html.DisplayFor(model => model.Nutriente1.nombre)
                </div>
            </div>
        </dd>

        <dt>
            Descripción del nutriente
        </dt>

        <dd>
            <div class="col-md-10">
                <div class="label">
                    @Html.DisplayFor(model => model.descripcion)
                </div>
            </div>
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-primary" /> |
            @Html.ActionLink("Volver a la lista", "Index", new { id = ViewBag.id })
        </div>
    }
</div>
