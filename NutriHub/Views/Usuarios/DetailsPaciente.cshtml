@model NutriHub.Models.Usuario

@{
    ViewBag.Title = "Detalles de usuario";
    Layout = "~/Views/Shared/_LayoutPa.cshtml";
    
}

<div class="view-container">
    <h2>Detalles del usuario</h2>

    <div>
        <h4>Información</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
               Nombre de usuario
            </dt>

            <dd>
                @Html.DisplayFor(model => model.nombreUsuario)
            </dd>

            <dt>
                Correo
            </dt>

            <dd>
                @Html.DisplayFor(model => model.correo)
            </dd>

            <dt>
                Contraseña
            </dt>

            <dd>
                @Html.DisplayFor(model => model.contrasenna)
            </dd>

            <dt>
                Cédula
            </dt>

            <dd>
                @Html.DisplayFor(model => model.cedula)
            </dd>

            <dt>
               Ocupación
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Paciente.ocupacion)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Editar", "Edit", new { id = Model.cedula })
    </p>
</div>